<% provide(:title, "Customize Milktea") %>

<h1 class="ui header title">Customize Your Milktea</h1>
<div class="row">
	<div class="ui grid container">
		<div class="sixteen wide column">
			<h3>Milktea Recipe:</h3>
			<p><%= @milktea.name %> - $<%= @milktea.price %> (standard)</p>
		</div>
		<div class="sixteen wide column">
			<%= form_for @milktea_orderable, html: { class: ["ui", "form"], id: "newMilkteaOrderableForm" } do |f| %>
				<%= render 'shared/error_msgs', object: f.object %>

				<div class="field">
					<%= f.label :addons, 'Toppings ($0.5/each):' %>
					<small>Caution: We recommend adding less than 3 toppings. Otherwise, you may not have much room for milktea</small>
					<%= f.collection_select(:addons, MilkteaAddon.all, :id, :name, { include_blank: "No Topping" }, { multiple: true, class: "ui fluid dropdown addonSelect"} ) %>
				</div>

				<div class="field">
					<label>Size</label>
				</div>
				<div class="inline fields">
					<%= radio_wrapper(f, :size, "0", "Standard", checked: true, class:"milkteaSize") %>
					<%= radio_wrapper(f, :size, "1", "Large (+ $0.99)", class: "milkteaSize") %>
				</div>
				
				<div class="field">
					<label>Sweetness</label>
				</div>
				<div class="inline fields">
					<%= radio_wrapper(f, :sweet_scale, "0", "Zero") %>
					<%= radio_wrapper(f, :sweet_scale, "1", "Little") %>
					<%= radio_wrapper(f, :sweet_scale, "2", "Half") %>
					<%= radio_wrapper(f, :sweet_scale, "3", "Less") %>
					<%= radio_wrapper(f, :sweet_scale, "4", "Regular", checked: true) %>
				</div>

				<div class="field">
					<label>Ice Level</label>
				</div>
				<div class="inline fields">
					<%= radio_wrapper(f, :temp_scale, "0", "Chill", checked: true) %>
					<%= radio_wrapper(f, :temp_scale, "1", "Less Ice") %>
					<%= radio_wrapper(f, :temp_scale, "2", "No Ice") %>
					<%= radio_wrapper(f, :temp_scale, "3", "Warm") %>
				</div>

				<%= f.hidden_field :milktea_id, value: params[:milktea_id] %>

				<div class="field">
					<label>Total for this item: $<span id="milkteaOrderableRuningTotal"><%= @milktea.price %></span></label>
				</div>

				<div class="field">
					<%= f.submit "Add to cart", class: "ui inverted blue button" %>
				</div>
			<% end %>

		</div>
	</div>
</div>



