<% if @user.errors.any? %>
	<div class="ui error message" style="display:block;">
		<i class="close icon"></i>
		<div class="header">
			Your registration contains <%= pluralize(@user.errors.count, "error") %>.
		</div>
		<ul class="list">
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>
