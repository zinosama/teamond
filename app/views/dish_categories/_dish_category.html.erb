<%-# This view is controlled by RecipeController and rendered through recipes/manage view %>

<div class="row dishCategoryRowInManage">
	<h1><%= link_to dish_category.name, edit_dish_category_url(dish_category) %></h1>
</div>

<div class="ui container grid">
	<% dish_category.dishes.each do |dish| %>
		<div class="two wide column">
			<%= link_to(image_tag(dish.image.url(:thumb).to_s, class:"ui image"), edit_recipe_url(dish)) if dish.image?  %>
			<p><%= dish.name %></p>
			<p>$ <%= dish.price %></p>
		</div>
	<% end %>
</div>

